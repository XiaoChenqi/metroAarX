<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--设备编号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备编号："
                style="@style/assue_add_title"
                ></TextView>

            <TextView
                android:id="@+id/demand_device_number_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/assue_add_context"
                ></TextView>

        </LinearLayout>
        <!--设备名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称："
                style="@style/assue_add_title"
                ></TextView>

            <TextView
                android:id="@+id/demand_device_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/assue_add_context"
                ></TextView>

        </LinearLayout>
        <!--设备位置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备位置："
                style="@style/assue_add_title"
                ></TextView>

            <TextView
                android:id="@+id/demand_device_location_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/assue_add_context"
                ></TextView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_delete_device_item"
        android:layout_width="@dimen/dp_70"
        android:layout_height="match_parent"
        android:background="@color/msg_red"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>