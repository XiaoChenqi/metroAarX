<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/ui_topbar"
        style="@style/commonTopbarStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg"
            android:fillViewport="true"
            android:focusableInTouchMode="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:descendantFocusability="blocksDescendants">

                <!--基本信息标题-->
                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <TextView
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_weight="1"
                        android:text="@string/maintenance_basic_info"/>

                </LinearLayout>

                <View
                    style="@style/secant_line_style"/>

                <!--基本信息内容-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_18">

                    <LinearLayout
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_detail_name"/>

                        <TextView
                            android:id="@+id/maintenance_content_name_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_affect"/>

                        <TextView
                            android:id="@+id/maintenance_content_influence_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_period"/>

                        <TextView
                            android:id="@+id/maintenance_content_period_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_first_time"/>

                        <TextView
                            android:id="@+id/maintenance_content_first_time_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_next_time"/>

                        <TextView
                            android:id="@+id/maintenance_content_next_time_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_start_end_time"/>

                        <TextView
                            android:id="@+id/maintenance_content_start_end_time_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_need_time"/>

                        <TextView
                            android:id="@+id/maintenance_content_need_time_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_auto_generate"/>

                        <TextView
                            android:id="@+id/maintenance_content_auto_generate_order_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        style="@style/maintenanceInfoStyle">

                        <TextView
                            style="@style/content_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/maintenance_ahead_day"/>

                        <TextView
                            android:id="@+id/maintenance_content_ahead_day_tv"
                            style="@style/h5_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/secant_line_style"/>

                <!--步骤-->
                <LinearLayout
                    android:id="@+id/maintenance_content_step_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <!--步骤标题-->
                    <LinearLayout
                        android:id="@+id/maintenance_content_step_title_ll"
                        style="@style/contentTitleLayoutStyle">

                        <TextView
                            style="@style/demandWorkTitleIconStyle"/>

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="@string/maintenance_step"/>

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/maintenance_content_step_expand_itv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_arrow_down"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_18"/>
                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/step_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:visibility="gone"/>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>

                <!--物料-->
                <LinearLayout
                    android:id="@+id/maintenance_content_material_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <!--物料标题-->
                    <LinearLayout
                        android:id="@+id/maintenance_content_material_title_ll"
                        style="@style/contentTitleLayoutStyle">

                        <TextView
                            style="@style/demandWorkTitleIconStyle"/>

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="@string/maintenance_material"/>

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/maintenance_content_material_expand_itv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_arrow_down"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_18"/>

                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/material_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:visibility="gone"/>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>

                <!--工具-->
                <LinearLayout
                    android:id="@+id/maintenance_content_tool_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <!--工具标题-->
                    <LinearLayout
                        android:id="@+id/maintenance_content_tool_title_ll"
                        style="@style/contentTitleLayoutStyle">

                        <TextView
                            style="@style/demandWorkTitleIconStyle"/>

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="@string/maintenance_tool"/>

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/maintenance_content_tool_expand_itv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_arrow_down"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_18"/>

                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tool_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:visibility="gone"/>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>


                <!--维护设备-->
                <LinearLayout
                    android:id="@+id/maintenance_equipment_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <!--维护设备标题-->
                    <LinearLayout
                        android:id="@+id/maintenance_equipment_title_ll"
                        style="@style/contentTitleLayoutStyle">

                        <TextView
                            style="@style/demandWorkTitleIconStyle"/>

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="@string/maintenance_device"/>

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/maintenance_equipment_expand_itv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_arrow_down"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_18"/>

                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/equipment_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:visibility="gone"/>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>

                <!--空间位置-->
                <LinearLayout
                    android:id="@+id/maintenance_space_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <!--空间位置标题-->
                    <LinearLayout
                        android:id="@+id/maintenance_space_title_ll"
                        style="@style/contentTitleLayoutStyle">

                        <TextView
                            style="@style/demandWorkTitleIconStyle"/>

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="车站"/>

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/maintenance_space_expand_itv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_arrow_down"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_18"/>

                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/space_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:visibility="gone"/>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>

                <!--维护工单-->
                <LinearLayout
                    android:id="@+id/maintenance_work_order_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <!--维护工单标题-->
                    <LinearLayout
                        android:id="@+id/maintenance_work_order_title_ll"
                        style="@style/contentTitleLayoutStyle">

                        <TextView
                            style="@style/demandWorkTitleIconStyle"/>

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="@string/maintenance_work_order_tip"/>

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/maintenance_work_order_expand_itv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/icon_arrow_down"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_18"/>

                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/work_order_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:visibility="gone"/>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>

                <!--附件-->
                <LinearLayout
                    android:id="@+id/maintenance_content_attachment_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white">

                    <!--附件标题-->
                    <LinearLayout
                        style="@style/contentTitleLayoutStyle">

                        <TextView
                            style="@style/demandWorkTitleIconStyle"/>

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_14"
                            android:layout_weight="1"
                            android:text="@string/maintenance_attachment"/>
                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/attachment_recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"/>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!--        <ImageView-->
        <!--            android:id="@+id/more_menu_iv"-->
        <!--            android:layout_width="@dimen/dp_55"-->
        <!--            android:layout_height="@dimen/dp_55"-->
        <!--            android:layout_alignParentBottom="true"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_marginBottom="@dimen/dp_20"-->
        <!--            android:layout_marginRight="@dimen/dp_16"-->
        <!--            android:background="@drawable/more_menu_selector"/>-->

    </RelativeLayout>




</LinearLayout>