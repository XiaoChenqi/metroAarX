<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/h5_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg"
            android:gravity="center"
            android:padding="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/grey_c"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_16"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.facilityone.wireless.a.arch.widget.CustomContentItemView
            android:id="@+id/civ_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_bg"
            app:fm_content_item_show_line="true"
            app:fm_content_item_show_red="true"
            app:fm_content_item_show_tip="true"
            app:fm_content_item_hide_lines="true"
            app:fm_content_item_show_tip_icon="true"
            android:visibility="visible"
            app:fm_content_item_et_hint="选择结束时间"
            app:fm_content_item_title="暂停结束时间" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_16">


            <EditText
                android:id="@+id/et_select_input"
                style="@style/h5_text_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/input_bg"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:paddingVertical="@dimen/dp_4"
                android:inputType="none"
                android:focusable="false"
                android:hint="暂停原因"
                android:textColorHint="@color/grey_c" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_4"
                android:visibility="gone"
                android:textColor="@color/grey_c"
                android:textSize="@dimen/sp_11" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_save"
            style="@style/btn_main_color_style"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_two_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_left"
                style="@style/btn_main_color_style.cancel"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_right"
                style="@style/btn_main_color_style"
                android:layout_width="0dp"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</layout>