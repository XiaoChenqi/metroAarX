<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/ui_topbar"
            style="@style/commonTopbarStyle" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F2F2"
            android:fillViewport="true"
            android:focusableInTouchMode="false"
            android:overScrollMode="never">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        style="@style/contentTitleLayoutStyle">

                        <View style="@style/demandWorkTitleIconStyle" />

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="监护信息"
                             />

                    </LinearLayout>

                    <View
                        style="@style/dash_line_style"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16" />

                    <!--记录人-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        android:layout_marginTop="@dimen/dp_10"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_registor"
                            tools:text="xx填写于XXXX-XX=XX XX:XX"
                            />
                    </LinearLayout>

                    <!--监护人员-->
                    <LinearLayout
                        style="@style/workorderInfoStyle">
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="监护人员："
                            />
                        <TextView
                            android:id="@+id/tvGuardian"
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <!--监护开始时间-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="监护开始时间："
                            />
                        <TextView
                            android:id="@+id/tvTutelageStart"
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>

                    <!--监护结束时间-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="监护结束时间："
                            />
                        <TextView
                            android:id="@+id/tvTutelageEnd"
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/ll_expend"
                        style="@style/contentTitleLayoutStyle">

                        <View style="@style/demandWorkTitleIconStyle" />

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="@dimen/dp_15"
                            android:text="施工基本信息" />

                    </LinearLayout>

                    <View
                        style="@style/dash_line_style"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16" />

                    <!--施工项目-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        android:layout_marginTop="@dimen/dp_10"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="施工项目："

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvConstProject"
                            />
                    </LinearLayout>

                    <!--施工日期-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="施工日期："
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvConstData"
                            />
                    </LinearLayout>

                    <!--施工站点-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="施工站点："
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvConstSite"
                            />
                    </LinearLayout>

                    <!--施工单位-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="施工单位："
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvConstUnit"
                            />
                    </LinearLayout>

                    <!--现场施工负责人-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="现场施工负责人："
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvConstLeader"
                            />
                    </LinearLayout>

                    <!--现场负责人-->
                    <LinearLayout
                        style="@style/workorderInfoStyle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_title_style"
                            android:layout_height="wrap_content"
                            android:text="现场负责人："
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            style="@style/h3_text_style"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvAllConstData"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/llListIn"
                    style="@style/contentTitleLayoutStyle">

                    <View style="@style/demandWorkTitleIconStyle" />

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="施工监护项目"
                        />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_right"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/llRemark"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        style="@style/contentTitleLayoutStyle">

                        <View style="@style/demandWorkTitleIconStyle" />

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="备注"
                            />
                    </LinearLayout>

                    <View
                        style="@style/dash_line_style"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_16" />

                    <com.facilityone.wireless.a.arch.widget.EditNumberView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/enRemark"
                        />
                </LinearLayout>





            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>