<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_radio_btn_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/my_radio_btn_rb"
        android:layout_width="@dimen/margin_normal"
        android:layout_height="@dimen/margin_normal"
        android:button="@null"
        android:clickable="false" />

    <TextView
        android:id="@+id/my_radio_btn_tv"
        android:layout_width="wrap_content"
        style="@style/level2_tv_style"
        android:layout_marginLeft="@dimen/margin_xmsmall"
        android:layout_height="wrap_content" />
</LinearLayout>