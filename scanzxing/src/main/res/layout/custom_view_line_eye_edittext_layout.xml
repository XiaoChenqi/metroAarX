<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/grey_level1"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:textSize="@dimen/text_size_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <EditText
            android:inputType="textPassword"
            android:id="@+id/edittext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:gravity="left|center_vertical"
            android:textColor="@color/main_black"
            android:textColorHint="@color/grey_level12"
            android:textSize="@dimen/text_size_info" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_clear"
                android:layout_width="@dimen/margin_normal"
                android:scaleType="center"
                android:layout_marginRight="@dimen/margin_xmsmall"
                android:layout_height="@dimen/margin_normal" />

            <ImageView
                android:id="@+id/button_eye"
                android:scaleType="center"
                android:layout_width="@dimen/margin_normal"
                android:layout_height="@dimen/margin_normal" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/bottom_line_view"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_height="@dimen/line_small_height"/>

</LinearLayout>