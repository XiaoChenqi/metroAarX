<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_box_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/fm_tag_fill_white_grey_line_background"
    android:layout_marginLeft="@dimen/margin_xmsmall"
    android:layout_marginTop="6.6dp"
    android:layout_marginRight="@dimen/margin_xmsmall"
    android:layout_marginBottom="6.6dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="@dimen/margin_xsmall"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/search_image_view"
                android:layout_width="@dimen/margin_xsmall"
                android:layout_height="@dimen/margin_xsmall"
                android:layout_gravity="center"
                android:scaleType="center"
                android:background="@drawable/pinyin_search"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <EditText
                android:textSize="@dimen/text_size_msg_content"
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="match_parent"
                android:background="@color/main_white"
                android:layout_gravity="center_vertical"
                android:textColor="@color/grey_level1"
                android:textColorHint="@color/grey_level13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_xmsmall"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/delete_image_view"
                android:layout_width="@dimen/margin_snormal"
                android:layout_height="@dimen/margin_snormal"
                android:layout_gravity="center"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>