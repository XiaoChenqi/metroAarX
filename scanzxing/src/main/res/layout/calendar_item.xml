<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/calendar_item_day_tv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:textColor="@color/maintenance_calendar_font_white"
        android:background="@drawable/fm_circle_grey_background"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/calendar_item_task_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:textColor="@color/maintenance_calendar_font_green"
        android:textSize="10sp"/>
</LinearLayout>