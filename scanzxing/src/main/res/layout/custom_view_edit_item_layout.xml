<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_normal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/edit_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_marginRight="@dimen/margin_lsmall"
        android:visibility="gone"
        android:gravity="center" />

    <TextView
        android:id="@+id/edit_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/text_size_info"
        android:singleLine="true"
        android:textColor="@color/grey_level2" />

    <TextView
        android:id="@+id/edit_item_mark_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.6dp"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"
        android:text="*"
        android:textColor="@color/main_red"
        android:textSize="@dimen/text_size_info"/>

    <LinearLayout
        android:id="@+id/edit_item_content_et_ll"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_item_content_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/text_size_hint"
            android:background="@android:color/transparent"
            android:textColor="@color/grey_level1"/>

        <View
            android:visibility="gone"
            android:id="@+id/edit_item_content_et_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_small_height"/>
    </LinearLayout>

    <TextView
        android:id="@+id/edit_item_content_tv"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/fm_item_clickable_background"
        android:gravity="right|center_vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="@dimen/text_size_hint"
        android:singleLine="true"
        android:textColor="@color/grey_level1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/edit_item_icon_select_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_xsmall"
        android:layout_marginBottom="@dimen/margin_xsmall"
        android:layout_marginRight="@dimen/margin_lsmall"
        android:src="@drawable/fm_icon_setting_arrow"
        android:visibility="gone"
        android:gravity="center" />
</LinearLayout>