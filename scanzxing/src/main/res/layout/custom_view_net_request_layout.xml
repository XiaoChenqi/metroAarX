<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/net_request_loading_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/loading_view"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/pulltorefresh_animation"/>

        <ProgressBar
            android:visibility="gone"
            style="@style/progressBarStyleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/net_request_loading_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/net_request_loading"
            android:textColor="#ffc0c0c0"
            android:textSize="@dimen/text_size_info" />
    </LinearLayout>

    <TextView
        android:id="@+id/net_request_loading_error_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:drawablePadding="@dimen/margin_normal"
        android:text="@string/net_request_loading_error"
        android:textColor="@color/grey_level11"
        android:textSize="@dimen/text_size_info" />

</FrameLayout>