<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:gesture-image="http://schemas.polites.com/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/pb_loading_vpp"
        android:layout_width="57dp"
        android:layout_gravity="center"
        android:layout_height="57dp"
        android:src="@drawable/pulltorefresh_animation"/>

    <com.facilityone.wireless.fm_library.photoselector.polites.GestureImageView
        android:id="@+id/iv_content_vpp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        gesture-image:max-scale="10.0"
        gesture-image:min-scale="0.75" />
</FrameLayout>