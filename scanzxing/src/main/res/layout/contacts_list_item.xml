<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false">

    <TextView
        android:id="@+id/alphabet_text_view"
        style="@style/level2_tv_style"
        android:textSize="@dimen/text_size_xsmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="left"
        android:visibility="gone"
        android:paddingBottom="@dimen/margin_msmall" />

    <RelativeLayout
        android:id="@+id/contacs_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fm_tag_fill_white_grey_line_background"
        android:layout_below="@id/alphabet_text_view"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/contacts_multiple_phone_operation_prompt_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/dot_focus"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/select_contacts_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/contacts_multiple_phone_operation_prompt_image_view"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/contacts_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/select_contacts_check_box">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/type_text_view"
                    android:textColor="@color/main_white"
                    android:textSize="@dimen/text_size_mlsmall"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_lsmall"
                    android:paddingRight="@dimen/margin_lsmall"
                    android:paddingTop="@dimen/margin_slsmall"
                    android:paddingBottom="@dimen/margin_slsmall"
                    android:layout_width="wrap_content"
                    android:background="@drawable/fm_tag_fill_blue_tlbr_background"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/name_text_view"
                    style="@style/level2_tv_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:paddingBottom="@dimen/margin_xmsmall"
                    android:paddingLeft="@dimen/margin_xmsmall"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/margin_xmsmall" />
            </RelativeLayout>

            <TextView
                android:id="@+id/phone_number_text_view"
                style="@style/tag_fill_red_circle_tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_lsmall"
                android:singleLine="true"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:minEms="2"
                android:layout_marginRight="@dimen/margin_xmsmall" />
        </LinearLayout>

        <ImageView
            android:id="@+id/operation_view_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_circle_r"
            android:background="@drawable/arrow_down_selector"
            android:contentDescription="@string/app_name"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/division_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_middle_height"
        android:layout_below="@id/contacs_info_layout"
        android:background="@color/grey_level1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/operation_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/division_line_view"
        android:background="@color/main_white"
        android:visibility="gone">

        <ImageView
            android:id="@+id/call_image_view"
            android:layout_width="@dimen/margin_xxlarge"
            android:layout_height="@dimen/margin_xxlarge"
            android:layout_marginLeft="@dimen/normal_circle_r"
            android:background="@drawable/dot_focus"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/sms_image_view"
            android:layout_width="@dimen/margin_xxlarge"
            android:layout_height="@dimen/margin_xxlarge"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/normal_circle_r"
            android:background="@drawable/dot_focus"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>
</RelativeLayout>