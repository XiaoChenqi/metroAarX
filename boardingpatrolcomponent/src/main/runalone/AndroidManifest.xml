<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.facilityone.wireless.boardingpatrol"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!-- NFC权限 -->
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:name="com.facilityone.wireless.boardingpatrol.runalone.BoardingPatrolApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:replace="android:label, android:theme">
        <activity
            android:name="com.facilityone.wireless.boardingpatrol.BoardingPatrolActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.NoTranslucent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>