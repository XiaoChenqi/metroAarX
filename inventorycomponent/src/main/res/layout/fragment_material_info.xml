<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/ui_topbar"
        style="@style/commonTopbarStyle"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--物资信息-->
            <include
                layout="@layout/material_info_layout"/>


            <!--当前物资记录-->
            <LinearLayout
                android:id="@+id/material_info_record_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!--当前物资记录标题-->
                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <View
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/inventory_currently_material_record"/>


                </LinearLayout>

                <View
                    style="@style/secant_line_style"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/material_info_record_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

                <View
                    style="@style/secant_line_style"/>

                <!--查看全部-->
                <LinearLayout
                    android:id="@+id/material_info_record_check_all_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_bg"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_43"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/list_item_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_16"
                        android:paddingRight="@dimen/dp_16">

                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/inventory_see_all"/>

                        <com.joanzapata.iconify.widget.IconTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/icon_right"
                            android:textColor="@color/grey_9"
                            android:textSize="@dimen/sp_14"/>

                    </LinearLayout>

                    <View
                        style="@style/secant_line_style"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>