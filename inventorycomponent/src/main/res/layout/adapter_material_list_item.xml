<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_18">

        <ImageView
            android:id="@+id/material_list_item_image_iv"
            android:layout_width="@dimen/dp_93"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/material_default_image"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/material_list_item_name_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:textColor="@color/grey_6"
                    android:textSize="@dimen/sp_15"/>

                <TextView
                    android:id="@+id/material_list_item_status_tv"
                    style="@style/tag_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inventory_tag_fill_blue_background"
                    android:text="充足"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/material_list_brand_model_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/material_list_item_brand_tv"
                    style="@style/h5_text_style"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/material_list_item_model_tv"
                    style="@style/h5_text_style"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    style="@style/content_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inventory_total_count"/>

                <TextView
                    android:id="@+id/material_list_item_total_number_tv"
                    style="@style/h5_text_style"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/content_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inventory_material_minimum_stock"/>

                <TextView
                    android:id="@+id/material_list_item_min_number_tv"
                    style="@style/h5_text_style"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/material_list_item_dash_line"
        style="@style/dash_line_style"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <View
        android:id="@+id/material_list_item_secant_line"
        style="@style/secant_line_style"/>

</LinearLayout>