<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_26"
        android:paddingRight="@dimen/dp_26">

        <TextView
            android:id="@+id/material_query_type_tv"
            style="@style/h3_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/material_query_status_checked_iv"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_8"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_3"
            android:src="@drawable/query_tag_check"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:id="@+id/material_query_status_dash_line"
        style="@style/dash_line_style"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <View
        android:id="@+id/material_query_status_secant_line"
        style="@style/secant_line_style"
        android:visibility="gone"/>


</LinearLayout>