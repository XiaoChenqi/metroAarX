<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/ui_topbar"
        style="@style/commonTopbarStyle"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/material_info_layout"/>

            <include
                android:id="@+id/material_batch_move_layout"
                layout="@layout/inventory_move_layout"/>


            <!--仓库管理员-->
            <LinearLayout
                android:id="@+id/material_batch_administrator_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <View
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/inventory_administrator_select_title"/>

                    <TextView
                        android:id="@+id/material_batch_administrator_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_15"/>

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_right"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_18"/>

                </LinearLayout>

                <View
                    style="@style/dash_line_style"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"/>

            </LinearLayout>

            <!--领用人-->
            <LinearLayout
                android:id="@+id/material_batch_receiving_person_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <View
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/inventory_receive_person_tip"/>

                    <TextView
                        android:id="@+id/material_batch_receiving_person_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_15"/>

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_right"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_18"/>

                </LinearLayout>

                <View
                    style="@style/dash_line_style"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"/>

            </LinearLayout>

            <!--主管-->
            <LinearLayout
                android:id="@+id/material_batch_supervisor_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <View
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/inventory_supervisor"/>

                    <TextView
                        android:id="@+id/material_batch_supervisor_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_15"/>

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_right"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_18"/>

                </LinearLayout>

                <View
                    style="@style/dash_line_style"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"/>

            </LinearLayout>

            <!--备注-->
            <LinearLayout
                android:id="@+id/material_batch_desc_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <View
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/inventory_material_desc"/>

                    <TextView
                        android:id="@+id/material_batch_desc_added_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_6"
                        android:text="@string/inventory_desc_edit_tip"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_15"/>

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_right"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/sp_18"/>

                </LinearLayout>

                <View
                    style="@style/secant_line_style"
                    android:layout_marginBottom="@dimen/dp_10"/>

            </LinearLayout>


            <!--入库批次-->
            <LinearLayout
                android:id="@+id/material_batch_in_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!--入库批次标题-->
                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <View
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/inventory_material_in_batches"/>


                    <TextView
                        android:id="@+id/material_batch_in_add_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/inventory_add"
                        android:textColor="@color/blue_159fe6"
                        android:textSize="@dimen/sp_15"/>

                </LinearLayout>

                <View
                    style="@style/secant_line_style"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/material_batch_in_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

            </LinearLayout>

            <!--出库、移库、盘点批次-->
            <LinearLayout
                android:id="@+id/material_batch_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <!--入库批次标题-->
                <LinearLayout
                    style="@style/contentTitleLayoutStyle">

                    <View
                        style="@style/demandWorkTitleIconStyle"/>

                    <TextView
                        android:id="@+id/material_batch_name_tv"
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="@string/inventory_material_out_batches"/>

                    <LinearLayout
                        android:id="@+id/material_batch_count_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/material_batch_count_name_tv"
                            style="@style/h3_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/inventory_material_out_quantity"/>

                        <TextView
                            android:id="@+id/material_batch_count_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.00"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_15"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/secant_line_style"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/material_batch_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>