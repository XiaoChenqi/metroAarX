<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_83"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/inventory_batch_original_storage_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inventory_original_storage"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_10"/>

            <TextView
                android:id="@+id/inventory_batch_original_storage_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/inventory_select_storage_hint"
                android:maxLines="1"
                android:textColor="@color/blue_159fe6"
                android:textColorHint="@color/grey_c"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="center_vertical"
            android:background="@drawable/inventory_to_target_storage"/>

        <LinearLayout
            android:id="@+id/inventory_batch_target_storage_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inventory_target_storage"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_10"/>

            <TextView
                android:id="@+id/inventory_batch_target_storage_name_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:hint="@string/inventory_select_storage_hint"
                android:maxLines="1"
                android:textColor="@color/blue_159fe6"
                android:textColorHint="@color/grey_c"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/secant_line_style"/>


    <!--原仓库管理员-->
    <LinearLayout
        android:id="@+id/material_batch_original_administrator_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/contentTitleLayoutStyle">

            <View
                style="@style/demandWorkTitleIconStyle"/>

            <TextView
                style="@style/h3_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/inventory_storage_administrator_original"/>

            <TextView
                android:id="@+id/material_batch_original_administrator_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_6"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_15"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_18"/>

        </LinearLayout>


        <View
            style="@style/dash_line_style"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

    </LinearLayout>

    <!--目标仓库管理员-->
    <LinearLayout
        android:id="@+id/material_batch_target_administrator_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            style="@style/contentTitleLayoutStyle">

            <View
                style="@style/demandWorkTitleIconStyle"/>

            <TextView
                style="@style/h3_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_15"
                android:text="@string/inventory_storage_administrator_target"/>

            <TextView
                android:id="@+id/material_batch_target_administrator_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_6"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_15"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_right"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_18"/>

        </LinearLayout>

        <View
            style="@style/dash_line_style"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

    </LinearLayout>

</LinearLayout>