<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_patrol_item_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_title_tv"
            style="@style/h3_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"/>

        <RadioGroup
            android:id="@+id/question_content_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_26"
            android:orientation="vertical">
        </RadioGroup>

        <LinearLayout
            android:id="@+id/question_input_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="vertical">

            <EditText
                android:id="@+id/question_input_et"
                style="@style/h3_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:inputType="numberSigned|numberDecimal"
                android:maxLines="1"
                android:hint="@string/patrol_input_number_hint"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/grey_c"
                android:imeOptions="actionDone"/>

            <View
                android:id="@+id/question_input_bottom_line_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.4"
                android:layout_marginTop="6dp"
                android:background="@color/grey_c"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/question_record_last"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_24"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/question_lastReading"
                style="@style/h3_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/grey_c"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/question_checkTime"
                style="@style/h3_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColorHint="@color/grey_c"
                android:imeOptions="actionDone"/>


        </LinearLayout>

        <View
            style="@style/secant_line_style"
            android:layout_marginTop="@dimen/dp_24"/>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/question_edit_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19">
            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/question_edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="@string/icon_input"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/question_take_photo_iv"
                app:layout_constraintHorizontal_weight="1"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/question_take_photo_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:gravity="center"
                android:text="@string/icon_camera"
                android:textColor="@color/grey_9"
                android:textSize="@dimen/sp_24"
                app:layout_constraintTop_toTopOf="@id/question_edit_iv"
                app:layout_constraintBottom_toBottomOf="@id/question_edit_iv"
                app:layout_constraintStart_toEndOf="@id/question_edit_iv"
                app:layout_constraintEnd_toStartOf="@id/question_report_iv"
                app:layout_constraintBaseline_toBaselineOf="@id/question_edit_iv"
                app:layout_constraintHorizontal_weight="1"/>


            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/question_report_iv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:text="@string/icon_repair"
                android:textColor="@color/grey_9"
                android:textSize="25sp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/question_edit_iv"
                app:layout_constraintBottom_toBottomOf="@id/question_edit_iv"
                app:layout_constraintStart_toEndOf="@id/question_take_photo_iv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/question_edit_iv"
                app:layout_constraintHorizontal_weight="1"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

