<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            android:id="@+id/title_tv"
            style="@style/h5_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/miss_tv"
            style="@style/patrolTagStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/fm_patrol_orange_tag_bg"
            android:text="@string/patrol_query_leak"/>

        <TextView
            android:id="@+id/exception_tv"
            style="@style/patrolTagStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/fm_patrol_red_tag_bg"
            android:text="@string/patrol_query_exception"/>

        <TextView
            android:id="@+id/solved_tv"
            style="@style/patrolTagStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:background="@drawable/fm_patrol_blue_tag_bg"
            android:text="@string/patrol_task_query_exception_handle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            style="@style/h5_13_9_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patrol_task_query_check_content_result"/>

        <TextView
            android:id="@+id/result_tv"
            style="@style/h5_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/pic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="@string/icon_pic"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/desc_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            style="@style/h5_13_9_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patrol_task_query_check_content_describe"/>

        <TextView
            android:id="@+id/desc_tv"
            style="@style/h5_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/del_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/fm_square_tag_green_bg"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_18"
            android:paddingTop="@dimen/dp_2"
            android:text="@string/patrol_task_query_handle"
            android:textColor="@color/green_tag_color"
            android:textSize="@dimen/sp_12"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/people_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            style="@style/h5_13_9_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patrol_task_operator"/>

        <TextView
            android:id="@+id/people_tv"
            style="@style/h5_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/type_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            style="@style/h5_13_9_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patrol_task_operator_type"/>

        <TextView
            android:id="@+id/type_tv"
            style="@style/h5_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16">

        <TextView
            style="@style/h5_13_9_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patrol_task_operation_time"/>

        <TextView
            android:id="@+id/time_tv"
            style="@style/h5_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:id="@+id/short_line"
        style="@style/dash_line_style"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="gone"/>

    <View
        android:id="@+id/long_line"
        style="@style/secant_line_style"
        android:layout_marginTop="@dimen/dp_16"
        android:visibility="gone"/>


</LinearLayout>