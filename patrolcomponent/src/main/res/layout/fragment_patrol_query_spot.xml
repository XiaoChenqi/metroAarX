<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/ui_topbar"
        style="@style/commonTopbarStyle"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/repair_tv"
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_66"
                        android:layout_gravity="left"
                        android:background="@drawable/fm_circle_tag_blue_bg"
                        android:gravity="center"
                        android:textColor="@color/blue_normal"
                        android:textSize="@dimen/sp_17"/>

                    <TextView
                        android:id="@+id/miss_tv"
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_66"
                        android:layout_gravity="center"
                        android:background="@drawable/fm_circle_tag_orange_bg"
                        android:gravity="center"
                        android:textColor="@color/orange_ff9900"
                        android:textSize="@dimen/sp_17"/>

                    <TextView
                        android:id="@+id/exception_tv"
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_66"
                        android:layout_gravity="right"
                        android:background="@drawable/fm_circle_tag_red_bg"
                        android:gravity="center"
                        android:textColor="@color/red_ff6666"
                        android:textSize="@dimen/sp_17"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_13"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:text="@string/patrol_task_query_repair"
                        android:textColor="@color/blue_normal"
                        android:textSize="@dimen/sp_13"/>

                    <TextView
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/patrol_query_leak"
                        android:textColor="@color/orange_ff9900"
                        android:textSize="@dimen/sp_13"/>

                    <TextView
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="@string/patrol_query_exception"
                        android:textColor="@color/red_ff6666"
                        android:textSize="@dimen/sp_13"/>
                </FrameLayout>

                <View style="@style/secant_line_style"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">

                <TextView
                    style="@style/h5_13_9_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patrol_task_query_laborer_tip"/>

                <TextView
                    android:id="@+id/people_tv"
                    style="@style/h5_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">

                <TextView
                    style="@style/h5_13_9_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patrol_task_query_period_tip"/>

                <TextView
                    android:id="@+id/plan_tv"
                    style="@style/h5_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">

                <TextView
                    style="@style/h5_13_9_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patrol_task_query_plan_tip"/>

                <TextView
                    android:id="@+id/plan_time_tv"
                    style="@style/h5_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_16">

                <TextView
                    style="@style/h5_13_9_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patrol_task_query_actual_tip"/>

                <TextView
                    android:id="@+id/real_time_tv"
                    style="@style/h5_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View style="@style/secant_line_style"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:overScrollMode="never"
                android:scrollbars="none"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>