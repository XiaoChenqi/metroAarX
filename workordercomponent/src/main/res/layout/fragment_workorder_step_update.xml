<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/ui_topbar"
        style="@style/commonTopbarStyle"/>


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="true"
        app:srlEnablePureScrollMode="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_precautions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        style="@style/h3_text_style"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:paddingTop="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_16"
                        android:text="@string/workorder_step_warning" />

                    <com.joanzapata.iconify.widget.IconTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icon_right"
                        android:textColor="@color/grey_9"
                        android:layout_marginRight="@dimen/dp_16"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>


                <TextView
                    style="@style/content_title_style1"
                    android:text="@string/workorder_basic_info"/>


                <LinearLayout
                    android:id="@+id/ll_eq_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:paddingTop="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_16"
                            android:text="@string/workorder_step_department_number" />

                        <TextView
                            android:id="@+id/tv_red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_6"
                            android:text="*"
                            android:textColor="@color/red"/>
                    </LinearLayout>


                    <EditText
                        android:id="@+id/et_step_eqNumber"
                        style="@style/h3_text_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_6"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|end"
                        android:hint="请输入设备数量"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_4" />
                </LinearLayout>

                <View style="@style/secant_line_style"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <TextView
                            style="@style/h3_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:paddingBottom="@dimen/dp_16"

                            android:paddingTop="@dimen/dp_16"
                            android:text="@string/workorder_step_maintenance_result"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_6"
                            android:text="*"
                            android:textColor="@color/red"/>
                    </LinearLayout>



                    <RadioGroup
                        android:id="@+id/maintenance_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="@dimen/dp_6"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_4">

                        <RadioButton
                            android:id="@+id/rb_nomal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/workorder_step_nomal" />

                        <RadioButton
                            android:id="@+id/rb_abnormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/workorder_step_abnomal" />
                    </RadioGroup>

                    <EditText
                        android:id="@+id/et_maintenance_result"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="@dimen/dp_6"
                        android:background="@null"
                        android:hint="请输入结果"
                        android:paddingTop="@dimen/dp_4"
                        android:gravity="end"
                        android:paddingEnd="@dimen/dp_10"
                        style="@style/h3_text_style"
                        android:paddingBottom="@dimen/dp_4" />
                </LinearLayout>

                <View style="@style/secant_line_style"/>

                <com.facilityone.wireless.a.arch.widget.CustomContentItemView
                    android:id="@+id/et_work_team_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:gravity="right"
                    app:fm_content_item_show_line="true"
                    app:fm_content_item_show_red="false"
                    app:fm_content_item_show_tip="true"
                    app:fm_content_item_show_tip_icon="false"
                    app:fm_content_item_title="@string/workorder_team"
                    app:fm_content_item_et_hint="@string/workorder_team"/>

                <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <!--<TextView-->
                <!--style="@style/content_title_style1"-->
                <!--android:paddingRight="@dimen/dp_0"-->
                <!--android:text="@string/workorder_team"/>-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingLeft="@dimen/dp_6"-->
                <!--android:text="*"-->
                <!--android:textColor="@color/red"-->
                <!--android:visibility="gone"/>-->
                <!--</LinearLayout>-->

                <!--<EditText-->
                <!--android:id="@+id/et_work_team"-->
                <!--style="@style/editorBgStyle"-->
                <!--android:editable="false"-->
                <!--android:hint="@string/workorder_team"/>-->

                <com.facilityone.wireless.a.arch.widget.CustomContentItemView
                    android:id="@+id/step_civ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    app:fm_content_item_show_line="true"
                    app:fm_content_item_show_red="false"
                    app:fm_content_item_show_tip="true"
                    app:fm_content_item_show_tip_icon="false"
                    app:fm_content_item_title="@string/workorder_step"
                    app:fm_content_item_et_hint="@string/workorder_step"/>




                <TextView
                    android:id="@+id/tvStepWarning"
                    style="@style/content_title_style1"
                    android:paddingEnd="@dimen/dp_0"
                    android:text="@string/workorder_step_warning"/>


                <com.facilityone.wireless.a.arch.widget.EditNumberView
                    android:id="@+id/etStepWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <TextView
                    style="@style/content_title_style1"
                    android:paddingRight="@dimen/dp_0"
                    android:text="@string/workorder_remark"/>

                <com.facilityone.wireless.a.arch.widget.EditNumberView
                    android:id="@+id/desc_step_env"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fm_edit_number_desc="@string/workorder_step_not_input"/>

                <View style="@style/secant_line_style"/>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:overScrollMode="never"
                    android:paddingBottom="@dimen/dp_13"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_4"/>

                <View style="@style/secant_line_style"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_16"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>











