<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/work_order_item_main_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:id="@+id/work_order_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/work_order_code_tv"
            style="@style/h3_15_6_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:text="addafdasfdasf"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:id="@+id/work_order_time_cost_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_order_code_tv"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:id="@+id/work_order_time_tv"
                style="@style/h3_15_6_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="dfafdfasf"
                android:textColor="@color/grey_b3" />

            <TextView
                android:id="@+id/work_order_cost_tv"
                style="@style/h3_15_6_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Â¥2000"
                android:textColor="@color/red_ff3a30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/work_order_customer_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_order_time_cost_ll"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                style="@style/h3_15_9_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/workorder_customer" />

            <TextView
                android:id="@+id/work_order_customer_tv"
                style="@style/h3_15_6_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="faffffffs" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/work_order_position_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/work_order_customer_ll"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                style="@style/h3_15_9_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/workorder_position_tip" />

            <TextView
                android:id="@+id/work_order_position_tv"
                style="@style/h3_15_6_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />

        </LinearLayout>


        <TextView
            android:id="@+id/work_order_state_tv"
            style="@style/tag_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/work_order_code_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:text="@string/workorder_pay" />

        <FrameLayout
            android:id="@+id/bottom_line_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/work_order_position_ll"
            android:layout_marginTop="@dimen/dp_12">

            <View
                android:id="@+id/bottom_solid_line"
                style="@style/secant_line_style"
                android:layout_below="@+id/work_order_item_rl" />

            <View
                android:id="@+id/bottom_dot_line"
                style="@style/dash_line_style"
                android:layout_below="@+id/report_select_item_rl"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15" />

        </FrameLayout>
    </RelativeLayout>


</RelativeLayout>