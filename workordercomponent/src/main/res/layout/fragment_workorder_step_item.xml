<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_item_bg"
              android:orientation="vertical"
              android:paddingTop="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/steps_sort_tv"
            style="@style/h5_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/steps_team_name_tv"
            style="@style/content_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_74"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/steps_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_10"/>

    </LinearLayout>

    <TextView
        android:id="@+id/steps_name_tv"
        style="@style/content_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"/>

    <LinearLayout
        android:id="@+id/steps_describe_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_15">

        <TextView
            style="@style/content_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/workorder_step_remark"/>

        <TextView
            android:id="@+id/steps_describe_tv"
            style="@style/h5_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_step_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_10"
        android:scrollbars="none"
        android:visibility="gone"/>

    <View
        android:id="@+id/view_line"
        style="@style/secant_line_style"
        android:visibility="gone"/>

    <View
        android:id="@+id/view_dash"
        style="@style/dash_line_style"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        android:visibility="gone"/>

</LinearLayout>