<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    android:id="@+id/swipeMenuLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true">

    <LinearLayout
        android:id="@+id/dispatch_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_name"
                style="@style/h3_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/itv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_40"
                android:text="@string/icon_check"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_18"
                android:visibility="gone"/>



        </LinearLayout>

        <View
            android:id="@+id/dispatch_dash_line"
            style="@style/dash_line_style"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"/>

        <View
            android:id="@+id/dispatch_secant_line"
            style="@style/secant_line_style"/>

    </LinearLayout>

    <!-- 以下都是侧滑菜单的内容依序排列 -->
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:background="@color/msg_red"
        android:text="@string/workorder_delete"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
